---
const { title, id } = Astro.props;
---

<section id={id} class="flex scroll-mt-24 flex-col items-center gap-4 space-y-8 lg:mt-24">
  <div class="flex flex-col items-center gap-4">
    <slot name="eyebrow" />
    <h2 class="gradientText text-center text-5xl font-extrabold tracking-tight">
      {title}
    </h2>
  </div>
  <p class="max-w-xl text-center text-2xl font-extrabold">
    <slot name="lead" />
  </p>
  <slot />
</section>
