---
import Base from '@layouts/Base.astro';
import { markdownify } from '../lib/utils/textConverter';
import { getEntryBySlug } from 'astro:content';
import { Image } from 'astro:assets';

const entry = await getEntryBySlug('pages', 'soobshchenie-otpravleno');
const { Content } = await entry.render();
---

<Base title={entry.data.title}>
  <section class="section">
    <div class="container">
      <div class="flex h-[40vh] items-center justify-center">
        <div class="text-center">
          <Image src="/images/logo.png" class="mb-4 inline" alt="logo" height={120} width={120} />
          <h1 class="mb-4" set:html={markdownify(entry.data.title)} />
          <Content />
        </div>
      </div>
    </div>
  </section>
</Base>
