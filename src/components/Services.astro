---
import SectionBlock from '@layouts/SectionBlock.astro';
const { services } = Astro.props;
---

<SectionBlock id="services" title="Наши услуги">
  <div class="mx-auto max-w-[1500px] py-10 lg:py-14">
    <div class="grid grid-cols-1 gap-4 md:grid-cols-2 md:gap-6 lg:grid-cols-3 xl:grid-cols-4">
      {
        services.map((service: any) => (
          <a
            href={service.href}
            class="h-full w-full rounded-3xl bg-white p-5 shadow-lg hover:shadow-2xl dark:bg-gray-800"
          >
            <div class="mb-3 flex items-center gap-x-4">
              <div class="inline-flex items-center justify-center rounded-full border-4 border-sky-100 bg-gradient-to-br from-sky-700 via-cyan-700 to-teal-700">
                <div class="m-5 h-9 w-9 text-sky-100 duration-200 hover:scale-150">
                  <svg xmlns="http://www.w3.org/2000/svg" width="36" height="36" viewBox={service.box}>
                    <path fill="currentColor" d={service.icon} />
                  </svg>
                </div>
              </div>
              <div class="max-w-24">
                <h3 class="text-md block font-semibold text-gray-800 dark:text-white lg:text-lg">{service.title}</h3>
                <p class="text-xs text-gray-600 dark:text-gray-400 lg:text-xl">{service.price}</p>
              </div>
            </div>
            <p class="text-gray-600 dark:text-gray-400 lg:ml-2">{service.description}</p>
          </a>
        ))
      }
    </div>
  </div>
</SectionBlock>
