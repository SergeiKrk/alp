---
import { Image } from 'astro:assets';
import MyForm from './MyForm.astro';
const { h_one, min_price, descript, heroImage, icon, box, list_services } = Astro.props;
---

<section class="relative h-full bg-black">
  <div class="absolute inset-0">
    <div class="relative h-full overflow-hidden bg-cover bg-center bg-no-repeat blur-sm">
      <Image class="h-full w-full rounded-b-lg" src={heroImage} width="1320" height="660" alt={h_one} />
      <div class="absolute bottom-0 left-0 right-0 top-0 h-full w-full overflow-hidden bg-slate-950/[.75] bg-fixed">
      </div>
    </div>
  </div>
  <div class="relative grid h-full place-items-center lg:grid-cols-2">
    <div
      class="flex-colq2 mx-6 mb-20 mt-6 gap-2 self-end sm:gap-4 sm:self-auto sm:justify-self-end lg:flex xl:flex 2xl:flex"
    >
      <h1>
        <div class="text-4xl font-extrabold tracking-tighter text-white">
          {h_one}
          <span class="text-green-600">{min_price}</span>
        </div>
      </h1>

      <div class="my-12">{descript}</div>

      <MyForm form_name={h_one} id_number="home_form" />
    </div>
    <div
      class="invisible w-2/3 max-w-3xl self-start sm:w-10/12 sm:self-auto sm:justify-self-start md:visible lg:visible xl:visible 2xl:visible"
    >
      <div class="grid grid-cols-1 gap-4">
        {
          list_services.map((service: any) => (
            <a href={service.url_id} class="h-full w-full rounded-3xl bg-white p-2 shadow-lg hover:shadow-2xl">
              <div class="mb-3 flex items-center gap-x-4">
                <div class="inline-flex h-[82px] w-[82px] items-center justify-center rounded-full border-4 border-sky-100 bg-gradient-to-br from-sky-700 via-cyan-700 to-teal-700">
                  <div class="h-9 w-9 text-sky-100 duration-200 hover:scale-150">
                    <svg xmlns="http://www.w3.org/2000/svg" width="36" height="36" viewBox={box}>
                      <path fill="currentColor" d={icon} />
                    </svg>
                  </div>
                </div>
                <div class="max-w-24">
                  <div class="text-md block font-semibold text-gray-800">{service.name}</div>
                </div>
              </div>
            </a>
          ))
        }
      </div>
    </div>
  </div>
</section>
