---
import { Image } from 'astro:assets';
import MyForm from './MyForm.astro';
const { descr, h_one, min_price, heroImage, icon, box, list_services } = Astro.props;
---

<section class="relative h-full bg-black">
  <div class="absolute inset-0">
    <div class="relative h-full overflow-hidden bg-cover bg-center bg-no-repeat blur-sm">
      <Image class="h-full w-full rounded-b-lg" src={heroImage} width="1320" height="660" alt={h_one} />
      <div class="absolute bottom-0 left-0 right-0 top-0 h-full w-full overflow-hidden bg-slate-950/[.75] bg-fixed">
      </div>
    </div>
  </div>
  <div class="relative mx-4 mb-24 flex h-full max-w-full flex-col md:mx-auto md:max-w-6xl md:flex-row">
    <div class="mt-24 basis-full md:basis-2/3 lg:my-64">
      <h1>
        <div class="text-2xl font-extrabold tracking-tighter text-white md:text-4xl">
          {h_one}
          <span class="text-green-600">{` ${min_price}`}</span>
        </div>
      </h1>

      <div class="my-12">
        <div class="text-xl text-white">{descr}</div>
        <MyForm form_name={h_one} id_number="home_form" />
      </div>
    </div>
    <div class="my-auto h-full basis-full md:basis-1/3">
      <div class="mb-12 grid grid-cols-1 gap-2">
        {
          list_services.map((service: any) => (
            <a
              href={service.url_id}
              class="h-full w-full rounded-full border-2 border-dotted border-teal-700/50 p-1 hover:bg-cyan-700/50 hover:bg-gradient-to-tr lg:ml-12 lg:w-[50%]"
            >
              <div class="flex items-center gap-x-1">
                <div class="inline-flex h-[40px] w-[40px] items-center justify-center rounded-full border-sky-100 bg-gradient-to-br from-sky-700 via-cyan-700 to-teal-700">
                  <div class="hover:scale-120 h-4 w-4 text-sky-100 duration-200">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox={box}>
                      <path fill="currentColor" d={icon} />
                    </svg>
                  </div>
                </div>
                <div class="max-w-24">
                  <div class="ml-1 block text-lg font-semibold text-sky-100">{service.name}</div>
                </div>
              </div>
            </a>
          ))
        }
      </div>
    </div>
  </div>
</section>
