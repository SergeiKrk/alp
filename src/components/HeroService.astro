---
import { Image } from 'astro:assets';
import MyForm from './MyForm.astro';
const { descr, h_one, min_price, heroImage, icon, box, list_services } = Astro.props;
---

<section class="relative mt-[80px] h-full bg-black">
  <div class="absolute inset-0">
    <div class="relative h-full overflow-hidden bg-cover bg-center bg-no-repeat blur-sm">
      <Image class="h-full w-full rounded-b-lg" src={heroImage} width="1320" height="660" alt={h_one} />
      <div class="absolute bottom-0 left-0 right-0 top-0 h-full w-full overflow-hidden bg-slate-950/[.75] bg-fixed">
      </div>
    </div>
  </div>
  <div class="relative mx-4 mb-24 flex h-full max-w-full flex-col md:mx-auto md:max-w-6xl md:flex-row">
    <div class="mt-24 basis-full md:p-6 lg:my-52 lg:basis-2/3">
      <h1>
        <div class="text-3xl font-extrabold tracking-tighter text-white md:mr-6 md:text-4xl lg:text-6xl">
          {h_one}
        </div>
      </h1>
      <div class="mt-4 text-2xl text-teal-500 md:mt-8 lg:text-4xl">Цена {` ${min_price}`}</div>

      <div class="my-12">
        <div class="text-xl text-white md:mr-12">{descr}</div>
        <MyForm form_name={h_one} id_number="home_form" />
      </div>
    </div>
    <div class="my-auto h-full basis-full md:p-6 lg:basis-1/3">
      <div class="mb-12">
        {
          list_services.map((service: any) => (
            <a href={service.url_id} class="p-1 md:ml-6 lg:ml-24">
              <div
                class={`flex items-center justify-start rounded-full transition-all duration-200 hover:rounded-full hover:border-2 hover:p-2 ${
                  service.active && 'border-2 p-1'
                }`}
              >
                <div class="rounded-full border-sky-100 bg-gradient-to-br from-sky-700 via-cyan-700 to-teal-700 p-3">
                  <div class="h-4 w-4 text-sky-100">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox={box}>
                      <path fill="currentColor" d={icon} />
                    </svg>
                  </div>
                </div>
                <div class="ml-4">
                  <div class="text-md ml-1 block font-semibold text-sky-100">{service.name}</div>
                </div>
              </div>
            </a>
          ))
        }
      </div>
    </div>
  </div>
</section>
