---
import SectionBlock from '@layouts/SectionBlock.astro';
import { Image } from 'astro:assets';
const { our_service } = Astro.props;
const { title, description, list_service } = our_service;
---

<SectionBlock id="tehnologiya">
  <div class="max-w-full">
    <div class="mx-auto mb-8 text-center lg:max-w-3xl">
      <h2 class="mb-10 text-5xl font-extrabold text-transparent">{title}</h2>
      <p class="mt-4">{description}</p>
    </div>
    {
      list_service.map((item: any, index: number) => (
        <div class={`max-w-full flex  ${index % 2 === 0 ? "bg-cyan-500" : "bg-cyan-800"}`}>
          <div class={`grid grid-cols-1 md:grid-cols-2 items-center gap-8 px-4 py-10 lg:px-auto lg:py-24`}>
          <div class={` ${index % 2 === 0 ? "order-0" : "order-1"}`}>
            {item.image && (
              <div class="relative">
                <Image
                  class="w-full object-contain rounded-xl"
                  alt={item.title}
                  width={670}
                  height={450}
                  src={item.image}
                />
              </div>
            )}
          </div>
          <div
            class={`mt-6 lg:mt-0 ${
              index % 2 === 0 ? "order-1" : "order-0"
            }`}
          >
            <div class={`${index % 2 === 0 ? "ml-4" : "mr-4"}`}>
              <h2 class="lg:text-2xl lg:mt-8 mb-6">{item.title}</h2>
              {item.description && <p class="my-4">{item.description}</p>}
              {item.principle_operation && (
                <p class="font-bold my-2">Принцип действия:</p>
                <p>{item.principle_operation}</p>
                )}
              {item.advantages_list && (
                <p class="my-3 font-bold">Преимущества метода:</p>
                <ul class="text-dark lg:-ml-4">
                  {item.advantages_list &&
                  item.advantages_list.map((list: any) => (
                    <li class="flex items-center rounded px-4">
                      + 
                      {list}
                    </li>
                  ))}
                </ul>
              )}
              {item.disadvantages_list && (
                <p class="my-3 font-bold">Недостатки метода:</p>
                <ul class="text-dark lg:-ml-4">
                  {item.disadvantages_list &&
                  item.disadvantages_list.map((negativelist: any) => (
                    <li class="flex items-center rounded px-4">
                      - 
                      {negativelist}
                    </li>
                  ))}
                </ul>
              )}

              {item.link && (
                <a href={item.link} class="relative flex h-18 w-24"> 
                  <div class="absolute inline-flex h-full w-full animate-ping rounded-full bg-secondary opacity-75"></div>
                  <div class="z-10 flex w-full items-center justify-center gap-x-3 rounded-lg border border-transparent bg-primary px-4 py-3 text-center font-semibold text-white transition hover:bg-secondary">Заказать</div> </a>
              )}
              <ul class="mt-6 text-dark lg:-ml-4">
                {item.list &&
                  item.list.map((list: any) => (
                    <li class="mb-2 flex items-center rounded px-4">
                      + 
                      {list}
                    </li>
                  ))}
              </ul>
              {item.price && <div class="mt-6 text-primary text-lg lg:text-2xl">{item.price}</div>}
            </div>
          </div>
          </div>
        </div>
      ))
    }
  </div>
</SectionBlock>
